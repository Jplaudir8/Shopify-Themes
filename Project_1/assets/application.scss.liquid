$main-font: 'Helvetica Neue', Arial, Helvetica, sans-serif;

$black: #000;
$white: #FFF;
$color-accent: #FF3700;
$color-text: #555;
$color-label: #707070;
$color-border: #DEDEDE;

$line-global: 20px; // line height value
$gutter-global: $line-global * 2; // gutter width

$body-font-size: 15px;
$label-font-size: 12px;

$standard-border: 1px solid $color-border;

@mixin reset-input {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
}

// Base
* {
    font-family: $main-font;
    box-sizing: border-box;
}

html,
body {
    width: 100%;
    margin: 0;
    padding:0;
    color: $black;
    line-height: $line-global;
}

body {
    font-size: $body-font-size;
    background-color: $white;
}

h1, h2, h3, h4, h5, h6, p, ul, ol {
    margin: 0;
    padding: 0;
    font-weight: 400;
}

// Style Guide

.headline-big {
    font-size: 22vw;
    line-height: 1;
}

h2 {
    font-size: $body-font-size * 2;
    line-height: $line-global * 2;
}

h3 {
    font-size: $body-font-size;
    line-height: $line-global;
}

p, ul, ol {
    font-size: $body-font-size;
    line-height: $line-global;
    color: $color-text;
}

.list-with-stroke {
    list-style-type: none;   
}

.list-with-stroke li {
    padding: $line-global 0;
    border-top: $standard-border;
}

.list-with-stroke li:last-child {
    border-bottom: $standard-border;
}

label {
    font-size: $label-font-size;
    color: $color-label;
}

select {
    @include reset-input();
    width: 100%;
    font-size: $body-font-size;
    line-height: $line-global;
    padding: $line-global;
    border: $standard-border;
}

button {
    @include reset-input();
    width: 100%;
    font-size: $body-font-size;
    line-height: $line-global;
    padding: $line-global;
    background-color: $color-accent;
    color: $white;
}

// Utility Classes
.grid {
    display: grid;
    grid-column-gap: $gutter-global;
    grid-row-gap: $gutter-global;
}

.two-columns {
    grid-template-columns: 1fr 1fr;
}

.valign-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.valign-bottom {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.main-content {
    min-height: 100vh;
    padding: $gutter-global;
    width: 50%;
    margin-left: auto;
}

.sticky-side-image {
    position: fixed;
    left: 0;
    top: $gutter-global;
    bottom: $gutter-global;

    width: 50%;
}

.sticky-side-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

// Index Styles
#page-index {
    
}

#product-info {
    grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}

.headline {
    padding-bottom: $line-global * 3;
}

.single-product-image {
    width: 100%;
    height: 100%;
}

.description-content {
    margin-top: $line-global;
}

.form-wrapper {
    padding-top: $line-global * 3;
}

#add-to-cart-form {
    margin-top: -($line-global);
}

#add-to-cart-button .product-price {
    float: right;
}